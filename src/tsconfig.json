{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "../lib",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "filesGlob": [
    "./**/*.ts",
    "../typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./lazy.ts",
    "../typings/assertion-error/assertion-error.d.ts",
    "../typings/chai/chai.d.ts",
    "../typings/mocha/mocha.d.ts",
    "../typings/tsd.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
