{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "noLib": false,
    "removeComments": false,
    "rootDir": ".",
    "sourceMap": true,
    "sourceRoot": ".",
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "classic",
    "noImplicitAny": false
  },
  "filesGlob": [
    "src/**/*.ts",
    "test/**/*.ts",
    "typings/**/*.d.ts",
    "node_modules/immutable/dist/immutable.d.ts",
    "!typings/should/should.d.ts",
    "!typings/tsd.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "src/helpers/ChaiModel-ext.d.ts",
    "typings/assertion-error/assertion-error.d.ts",
    "typings/chai/chai.d.ts",
    "typings/js-yaml/js-yaml.d.ts",
    "typings/lodash/lodash.d.ts",
    "typings/mocha/mocha.d.ts",
    "node_modules/immutable/dist/immutable.d.ts",
    "src/core/Either.ts",
    "src/core/Maybe.ts",
    "src/helpers.ts",
    "src/helpers/ChaiModel.ts",
    "src/main.ts",
    "src/utils.ts",
    "src/utils/Hash.ts",
    "src/utils/Immutable.ts",
    "src/utils/Math.ts",
    "test/core/EitherTest.ts",
    "test/core/MaybeTest.ts",
    "test/helpers/ChaiModelTest.ts"
  ]
}
